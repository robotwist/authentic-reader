# Hugging Face API Token (for logical fallacy detection and sentiment analysis)
REACT_APP_HF_API_TOKEN=your_hugging_face_token_here
VITE_HF_API_TOKEN=your_hugging_face_token_here

# OpenAI (optional, for improved text generation and summarization)
REACT_APP_OPENAI_API_KEY=your_openai_key_here
VITE_OPENAI_API_KEY=your_openai_key_here

# Anthropic (optional, for Claude API access)
REACT_APP_ANTHROPIC_API_KEY=your_anthropic_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_key_here

# Local model paths (for ONNX and Llama integration)
REACT_APP_LOCAL_MODELS_PATH=./models
VITE_LOCAL_MODELS_PATH=./models

# ChromaDB Configuration
REACT_APP_CHROMA_HOST=localhost
VITE_CHROMA_HOST=localhost
REACT_APP_CHROMA_PORT=8000
VITE_CHROMA_PORT=8000

# Feature flags
VITE_ENABLE_LOCAL_FALLBACKS=true
REACT_APP_ENABLE_LOCAL_FALLBACKS=true
VITE_ENABLE_FEEDBACK_LOOP=true
REACT_APP_ENABLE_FEEDBACK_LOOP=true

# Logging level (debug, info, warn, error)
VITE_LOG_LEVEL=info
REACT_APP_LOG_LEVEL=info

# API URL (if you have a backend)
VITE_API_URL=http://localhost:3000/api
REACT_APP_API_URL=http://localhost:3000/api 